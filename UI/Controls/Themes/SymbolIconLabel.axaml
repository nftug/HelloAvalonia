<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fa="using:FluentAvalonia.UI.Controls"
                    xmlns:ctl="using:HelloAvalonia.UI.Controls">

    <ControlTheme x:Key="{x:Type ctl:SymbolIconLabel}" TargetType="ctl:SymbolIconLabel">
        <Setter Property="Template">
            <ControlTemplate TargetType="ctl:SymbolIconLabel">
                <StackPanel Orientation="Horizontal" Spacing="{TemplateBinding Spacing}">
                    <fa:SymbolIcon Symbol="{TemplateBinding Symbol}" />
                    <TextBlock Text="{TemplateBinding Label}" VerticalAlignment="Center" />
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </ControlTheme>

</ResourceDictionary>
